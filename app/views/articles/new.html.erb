<h2>Add new article</h2>

<%= form_for @article do |f| %>

	<%= f.label :title %><br/>
	<%= f.text_field :title %><br/><br/>
	<%= f.label :body %><br/>
	<%= f.text_area :body %><br/><br/>
	<%= f.label :publish_on %><br/>
	<%= f.date_select :published_on %><br/><br/>
	<%= f.label :select_categories %><br/>	
	<%= f.collection_check_boxes :category_ids, Category.all, :id, :name %><br/><br/>


	<%= f.submit %>	

<% end %>